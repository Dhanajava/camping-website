<%- include("partials/header") %>

<div class="heading" style="background-color: #E5E4E2; padding:5%; margin:30px;border-radius:2em">
   <h1 style="padding-bottom:10px">This Is The Campgrounds Page</h1>
   <h5> We Had A Worlds Best Photography Images!!</h5>
   <a class="btn btn-primary" href="/campground/new">Add New Campground :)</a>
</div>
<div class="container" >
   
 <div class="row" style="justify-content: space-evenly;">
   <% campground.forEach(function(campground){ %>
      <div class="col-md-3 col-sm-6;" style="margin:5px;">
         <div class="thumbnail" style=" box-shadow:5px 10px 8px #888888; margin-bottom:20px;padding-bottom: 5px";>
            <img class="ikmage" style="width:100%; height:200px; " src= "<%=campground.image %>" >
            <div class="caption" style="text-align:center; width:100%;">
               <h4> <%=campground.name %> </h4>
            </div>
            <p>
               <a href="/campground/<%= campground._id%>" class="btn btn-primary" style="margin-left:35%">More Info</a>
            </p>
         </div>
      </div>
   <% }) %>
 </div>
</div>

<%- include("partials/footer") %>
