<%- include("partials/header") %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
        <p class="lead">YelCamp</p>
        <div class="list-group">
            <li class="list-group-item active">Info 1</li>
            <li class="list-group-item">Info 2</li>
            <li class="list-group-item">Info 3</li>
        </div>
    </div>
    <div class="col-md-9">
        <div class="thumbnail">
          <img class="img-responsive" src="<%=campground.image%>">
          <div class="caption-full">
            <h6 class="pull-right">Rs <%=campground.price%>/Per Night</h6>
            <h4><a><%=campground.name%> </a></h4>
            <p><em>Submitted By <%=campground.author.username %></em></p>
            <% if(currentuser && campground.author.id.equals(currentuser._id)){ %>
            <a class="btn btn-warning" href="/campground/<%=campground._id%>/edit" style="margin-bottom:10px;">Edit</a>
            <form style="display:inline;" action="/campground/<%=campground._id%>?_method=DELETE" method="POST">
              <button style="margin-bottom:10px;"class="btn btn-danger">Delete</button>
            </form>
            <% } %>
          </div>
        </div>
        <div class="well" >
            <div class="text-right">
                <a class="btn btn-success" style="margin-left:80%;margin-top: 10px;"
                 href="/campground/<%= campground._id %>/comment/new" style="margin-top: 10px;">Add New Comments</a>
            </div>
                <% campground.comment.forEach(function(comment){ %>
                    <div class="row" style="margin-left:10px;margin-top:5%;">
                       <div class="col-md-12">
                        <strong><%= comment.author.username %> </strong>
                        <span class="pull-right" style="margin-left: 80%;">-10 Days Ago</span>
                        <p><%=comment.text %></p>
                        <% if(currentuser && comment.author.id.equals(currentuser._id)){ %>
                        <a class="btn btn-sm btn-warning" href="/campground/<%=campground._id%>/comment/<%=comment._id%>/edit">Edit</a>
                          </div>
                        <form action="/campground/<%=campground._id%>/comment/<%=comment._id%>?_method=DELETE" method="POST" style="margin-top:7px;">
                          <input type="submit" class="btn btn-sm btn-danger" value="Delete" >
                        </form>
                        <% } %>
                       </div>
                    </div>
             <% }) %>
        </div>
    </div>
  </div>
</div>



  


